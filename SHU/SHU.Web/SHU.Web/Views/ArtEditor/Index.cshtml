            @Html.DisplayFor(modelItem => item.XueQi.MingCheng)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KeCheng.MingCheng)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JiangXiang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZuoPinLuJing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZuoPinLuJing2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZuoPinMingCheng)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ji)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.ID }) |
            @Html.ActionLink("详情", "Details", new { id=item.ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
